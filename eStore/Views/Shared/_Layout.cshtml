@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container" style="height: 5em; background-color:deepskyblue">
            <a style=" margin-left: 3em; font-size: 3em;">eStore</a>

        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="background-color:cadetblue">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="margin-left: 8em;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (@Context.Session.GetString("Email") == "admin@estore.com")
                        {
                            <p>|</p>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Shopping</a>
                            </li>
                            <p>|</p>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Search">Search</a>
                            </li>
                        }
                    </ul>
                </div>
                <a>@Context.Session.GetString("Email")</a>
            </div>

        </nav>
    </header>

    <nav class="navbar navbar-inverse" style="background-color: white; width: 10em; height:30em; float:left">
        <div class="navbar">
            @if (@Context.Session.GetString("Email") == "admin@estore.com")
            {
                <ul class="nav navbar-nav">
                    <li class="nav-item" style="border-bottom-style: outset; ">
                        <a class="nav-link text-dark">Shopping</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Search">Search</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" style="border-bottom-style: outset;">Admin</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                    </li>
                </ul>
            }
            @if (@Context.Session.GetString("Email") != "admin@estore.com")
            {
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" style="border-bottom-style: outset;">User</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Members" asp-action="Profile">My Profile</a>
                    </li>
                    <li class="nav-item" style="margin-left: 2em; border-bottom-style: outset;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="MyOrders">My Orders</a>
                    </li>
                </ul>
            }
            <ul class="nav navbar-nav">
                <li class="nav-item" style="border-bottom-style: outset;">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>

    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - eStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
